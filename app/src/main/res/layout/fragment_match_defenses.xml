<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DefensesFragment"
    android:baselineAligned="false">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MatchA1"
            android:layout_marginTop="20dp"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MatchA2"
            android:layout_marginTop="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MatchB1"
            android:layout_marginTop="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MatchB2"
            android:layout_marginTop="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MatchC1"
            android:layout_marginTop="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MatchC2"
            android:layout_marginTop="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MatchD1"
            android:layout_marginTop="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MatchD2"
            android:layout_marginTop="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MatchLB"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/A1"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/A2"
            android:id="@+id/textView2"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/B1"
            android:id="@+id/textView3"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/B2"
            android:id="@+id/textView4"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/C1"
            android:id="@+id/textView5"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/C2"
            android:id="@+id/textView6"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/D1"
            android:id="@+id/textView7"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/D2"
            android:id="@+id/textView8"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/Lowbar"
            android:id="@+id/textView9"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"/>
    </LinearLayout>


</LinearLayout>