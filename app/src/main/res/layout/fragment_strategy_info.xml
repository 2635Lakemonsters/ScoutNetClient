<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/doesRobotCheckAll"
        android:id="@+id/textView10"
        android:textColor="@android:color/black"/>

    <CheckBox
        android:id="@+id/doesAutoContactTubs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Tubs During Autonomous" />

    <CheckBox
        android:id="@+id/doesAutoSupportTubs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Support Tubs During Autonomous" />

    <CheckBox
        android:id="@+id/doesAutoSupportBunnies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Support Bunnies During Autonomous" />

    <CheckBox
        android:id="@+id/doesGiveCubes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give Cubes To Alliance Members" />

    <CheckBox
        android:id="@+id/doesPutBunnies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Put Bunnies On Opposing Bots" />

    <CheckBox
        android:id="@+id/doesRemoveBunnies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Bunnies From Itself Or Others" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generalStrategyNotes"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/generalStrategyNotes"/>
</LinearLayout>