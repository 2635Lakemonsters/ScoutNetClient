<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/doesRobotCheckAll"
        android:id="@+id/textView10"
        android:textColor="@android:color/black"/>

    <CheckBox
        android:id="@+id/doesSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Can Deliver to Switch" />

    <CheckBox
        android:id="@+id/doesScale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Can Deliver to Scale" />

    <CheckBox
        android:id="@+id/doesLiftCubes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lifts Cubes" />

    <CheckBox
        android:id="@+id/doesShootCubes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoots Cubes" />

    <CheckBox
        android:id="@+id/doesVault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deliver to Vault" />

    <CheckBox
        android:id="@+id/doesClimb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Climb" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playDefense"
        android:id="@+id/isDefensive"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/isOffensive"
        android:text="@string/playOffense"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generalStrategyNotes"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/generalStrategyNotes"/>
</LinearLayout>