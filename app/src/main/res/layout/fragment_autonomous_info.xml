<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="org.team2635.scoutnetclient.FieldInfoActivity"
              android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Autonomous"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Switch
        android:id="@+id/matchDoesAutonomous"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/doesAutonomous" />

    <CheckBox
        android:id="@+id/matchCenterCrossed"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_gravity="center_horizontal"
        android:text="Crossed Hab Line" />


    <CheckBox
        android:id="@+id/autoBroke"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:text="Auto Broke" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="191dp"
            android:layout_height="match_parent"
            android:layout_weight="0.89"
            android:orientation="vertical"
            android:weightSum="1">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.59" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Cargo Delivered" />

            <Button
                android:id="@+id/autoCargoAdd"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:nestedScrollingEnabled="false"
                android:text="+" />

            <TextView
                android:id="@+id/autoCargoNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0" />

            <Button
                android:id="@+id/autoCargoSub"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:nestedScrollingEnabled="false"
                android:text="-" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="120dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="191dp"
            android:layout_height="match_parent"
            android:layout_weight="0.89"
            android:orientation="vertical"
            android:weightSum="1">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.59" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Hatch Panels Attached" />

            <Button
                android:id="@+id/autoPanelAdd"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:nestedScrollingEnabled="false"
                android:text="+" />

            <TextView
                android:id="@+id/autoPanelNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0" />

            <Button
                android:id="@+id/autoPanelSub"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:nestedScrollingEnabled="false"
                android:text="-" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="120dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

